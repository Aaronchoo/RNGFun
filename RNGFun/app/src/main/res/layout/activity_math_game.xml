<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.android.rngfun.MathGame">

    <TextView
        android:id="@+id/math_problem_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:textSize="24sp"
        android:background="@drawable/outline_box"
        android:text="24 x 24 = ?"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            style="@style/CalculatorButton"
            android:text="7"
            android:onClick="ButtonSeven"
            />
        <Button
            style="@style/CalculatorButton"
            android:text="8"
            android:onClick="ButtonEight"
            />
        <Button
            style="@style/CalculatorButton"
            android:onClick="ButtonNine"
            android:text="9"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/CalculatorButton"
            android:text="4"
            android:onClick="ButtonFour"
            />
        <Button
            style="@style/CalculatorButton"
            android:onClick="ButtonFive"
            android:text="5"
            />
        <Button
            style="@style/CalculatorButton"
            android:text="6"
            android:onClick="ButtonSix"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/CalculatorButton"
            android:text="1"
            android:onClick="ButtonOne"
            />
        <Button
            style="@style/CalculatorButton"
            android:text="2"
            android:onClick="ButtonTwo"
            />
        <Button
            style="@style/CalculatorButton"
            android:text="3"
            android:onClick="ButtonThree"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="ButtonZero"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#eeeeee"
            android:layout_margin="8dp"
            android:text="0"
            />
        <Button
            style="@style/CalculatorButton"
            android:text="Delete"
            android:onClick="ButtonRemove"
            />
    </LinearLayout>

</LinearLayout>
