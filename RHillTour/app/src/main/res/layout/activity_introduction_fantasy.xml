<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.rhilltour.IntroductionFantasy">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/graffitihype" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingBottom="12dp"
            android:text="Have you ever wondered what it would be like to be in a fantasy world?"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="The world of Hypella is like many tales and rumors that go around. Except for the fact that it's real (in our hearts). Power, authority, and many other things work very differently here! Click below to learn about Hypella!! Just don't look where you're not allowed! Cause the void will stare back at you."
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
        <Button
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:id="@+id/worldSeeker"
            android:text="The World"/></FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
        <Button
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/creatureSeeker"
            android:background="?android:attr/selectableItemBackground"
            android:text="The Creatures"/></FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/storySeeker"
            android:text="The Story"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
